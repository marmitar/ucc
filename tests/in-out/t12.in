// The following program shows use of a function pointer
// for selecting between addition and subtraction:

int add(int x, int y) {
    return x + y;
}

int subtract(int x, int y) {
    return x - y;
}

int main() {
   int  foo = 1, bar = 1;
   print(foo, " + ", bar, " = ", add(foo, bar), "\n");
   print(foo, " - ", bar, " = ", subtract(foo, bar), "\n");
   return 0;
}
